{% extends 'baseFront.html.twig' %}

{% block container %}

<!-- Section Title -->
<div class="section-title" style="background:url({{ asset('app/front/img/slide/1.jpg') }})">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <h1>Results</h1>
            </div>

            <div class="col-md-4">
                <div class="breadcrumbs">
                    <ul>
                        <li><a href="{{ path('game_index') }}">Home</a></li>
                        <li>Results</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Section Title -->

<!-- Section Area - Content Central -->
<section class="content-info">

    <div class="container padding-top">
        <div class="row">
            <div class="col-lg-12">
                <div class="recent-results results-page">
                    <div class="info-results">
                        <ul>



                            {% for game in games %}

                            <li>
                                <span class="head">
                                    {{ game.gameWinnerteam }} Vs {{ game.gameLossteam }} <span class="date">{{ game.gameDate |date('Y-m-d') }}</span>
                                </span>
                                <div class="goals-result">
                                    <a href="">
                                        <img src="{{ asset('') }}" alt="">
                                        {{ game.gameWinnerteam }}
                                    </a>

                                    <span class="goals">
                                                    <b>{{ game.gameWinnerteamscore }}</b> - <b>{{ game.gameLossteamscore }}</b>
                                                    <a href="{{ path('game_front_single_result',{'id':game.gameId}) }}" class="btn theme">View More</a>
                                                </span>

                                    <a href="">
                                        <img src="{{ asset('') }}" alt="">
                                        {{ game.gameLossteam }}
                                    </a>
                                </div>
                            </li>
                            {% endfor %}

                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
