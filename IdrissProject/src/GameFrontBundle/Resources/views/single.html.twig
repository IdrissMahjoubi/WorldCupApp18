                                    </div>
                                </div>
                            </div>





                            <!--Sponsors CLub -->
                            <div class="row no-line-height">
                                <div class="col-md-12">
                                    <h3 class="clear-title">Match Sponsors</h3>
                                </div>
                            </div>
                            <!--End Sponsors CLub -->

                            <ul class="sponsors-carousel">
                                <li><a href="single-result.html#"><img src="{{ asset('app/front/img/sponsors/1.png') }}" alt=""></a></li>
                                <li><a href="single-result.html#"><img src="{{ asset('app/front/img/sponsors/2.png') }}" alt=""></a></li>
                                <li><a href="single-result.html#"><img src="{{ asset('app/front/img/sponsors/3.png') }}" alt=""></a></li>
                                <li><a href="single-result.html#"><img src="{{ asset('app/front/img/sponsors/4.png') }}" alt=""></a></li>
                                <li><a href="single-result.html#"><img src="{{ asset('app/front/img/sponsors/4.png') }}" alt=""></a></li>
                                <li><a href="single-result.html#"><img src="{{ asset('app/front/img/sponsors/5.png') }}" alt=""></a></li>
                            </ul>

                        </div>
                        <!-- Tab One - Sumary -->

                    </div>
                    <!-- Content Tabs -->
                </div>

            </div>
        </div>
    </div>
    <!-- Single Team Tabs -->
</section>
{% endblock %}
