{% extends 'base.html.twig' %}
    {% block container %}


        <div class="page-title">
            <h3 class="breadcrumb-header">Add Game</h3>
        </div>
    <h4>
            <a href="{{ path('game_index') }}">Back to the list of Games</a>
    </h4>
<div id="main-wrapper">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-white">
                <div class="panel-body">

                    <button type="button" class="btn btn-success m-b-sm" data-toggle="modal" data-target="#myModal">Add new Game</button>

        {{ form_start(form) }}
        <div class="modal fade in" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">Ã—</span></button>
                        <h4 class="modal-title" id="myModalLabel">Add a new Game</h4>
                    </div>
                        <div class="modal-body">
                            <div class="form-group">
                                <label  class="control-label">Game Kind</label>
                                {{ form_widget(form.gameKind, { 'attr': {'class': 'form-control input-rounded'} }) }}
                            </div>
                            <div class="form-group">
                                <label  class="control-label">Select first-team</label>
                                {{ form_widget(form.gameWinnerteam, { 'attr': {'class': 'form-control input-rounded'} }) }}

                            </div>
                            <div class="form-group">
                                <label  class="control-label">Select second-team</label>
                                {{ form_widget(form.gameLossteam, { 'attr': {'class': 'form-control input-rounded'} }) }}

                            </div>



                            <div class="form-group">
                                <label class=" control-label" for="game-time">Game Time</label>
                                <div class="input-group input-append bootstrap-timepicker">
                                    {{ form_widget(form.gameTime, { 'attr': {'class': 'form-control input-rounded'} }) }}
                                    <span class="input-group-addon add-on"><i class="fa fa-clock-o"></i></span>
                                </div>
                            </div>



                            <div class="form-group">
                                <label class=" control-label" for="game-date">Game Date</label>
                                {{ form_widget(form.gameDate, { 'attr': {'class': 'form-control input-rounded'} }) }}
                            </div>
                            <div class="form-group">
                                <label  class="control-label">1st Team Score</label>
                                {{ form_widget(form.gameWinnerteamscore, { 'attr': {'class': 'form-control input-rounded'} }) }}
                            </div>
                            <div class="form-group">
                                <label  class="control-label">2nd Team Score</label>
                                {{ form_widget(form.gameLossteamscore, { 'attr': {'class': 'form-control input-rounded'} }) }}
                            </div>
                            <div class="form-group">
                                <label  class="control-label" for="referee">Referee</label>
                                {{ form_widget(form.gameReferee, { 'attr': {'class': 'form-control input-rounded'} }) }}
                            </div>
                            <div class="form-group">
                                <label  class="control-label" for="stadium">Stadium</label>
                                {{ form_widget(form.gameStadium, { 'attr': {'class': 'form-control input-rounded'} }) }}
                            </div>
                            <div class="form-group">
                                <label  class="control-label">Match Number</label>
                                {{ form_widget(form.gameMatchnumber, { 'attr': {'class': 'form-control input-rounded'} }) }}
                            </div>
                            <div class="form-group">
                                <label  class="control-label">Match Venue</label>
                                {{ form_widget(form.gameVenue, { 'attr': {'class': 'form-control input-rounded'} }) }}
                            </div>
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                            <button type="submit" id="add-row" class="btn btn-success">Add</button>
                        </div>
                </div>
            </div>
        </div>
        {{ form_end(form) }}

                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
